<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:usesCleartextTraffic="true"
    >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FreshF"
        tools:targetApi="31"
        android:enableOnBackInvokedCallback="true"
        >


        <activity android:name=".Sign_Up_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".Login_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".View_All_Popular_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".View_All_Category_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".View_All_Product_By_Type_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".Detail_Product_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".Placed_Oder_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".Detail_Order_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>

        <activity android:name=".Main_Activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name=".SelectSubjectActivity" />
                <category android:name="adjustResize" />
            </intent-filter>
        </activity>
    </application>

</manifest>
