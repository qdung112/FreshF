<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreshF" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#33907C</item>
        <item name="colorPrimaryVariant">#33907C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="font_characters" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_input_text" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:width">345dp</item>
        <item name="android:padding">12dp</item>
        <item name="color">#FFFFFF</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#13B58C</item>
        <item name="android:color">#FFFFFF</item>
        <item name="android:width">345dp</item>
        <item name="android:padding">10dp</item>
        <item name="color">#FFFFFF</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppNavigationViewStyle" parent="@style/Widget.Design.NavigationView">
        <item name="itemIconTint">#33907C</item>
    </style>


</resources>